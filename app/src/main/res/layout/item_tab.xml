<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_holder"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/size_text_medium"
    android:background="@drawable/background_tab_pressed">
    <TextView
        android:id="@+id/text_department_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gilroy_semi_bold"
        android:textSize="@dimen/size_text_extra_medium"
        android:textColor="@color/colorPrimary"
        android:text="Tất cả"/>
    <TextView
        android:id="@+id/text_num_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:fontFamily="@font/gilroy_regular"
        android:textSize="@dimen/size_text_medium"
        android:textColor="@color/colorTextPrimary"
        android:text="(11)"/>
</LinearLayout>