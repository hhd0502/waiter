<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/margin"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <me.imstudio.core.ui.widget.TextView
        android:id="@+id/stt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="top"
        android:fontFamily="@font/source_sans_pro_regular"
        android:paddingTop="@dimen/margin_extra_small"
        android:textSize="@dimen/size_text_medium"
        android:textColor="@color/colorTextPrimary"
        android:text="1"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:layout_marginEnd="@dimen/margin_small"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <me.imstudio.core.ui.widget.TextView
            android:id="@+id/product_name_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_regular"
            android:textSize="@dimen/size_text_extra_medium"
            android:textColor="@color/colorTextPrimary"
            android:text="Sò dương nướng muối ớt"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <me.imstudio.core.ui.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_semi_bold"
                android:textSize="@dimen/size_text_medium"
                android:textColor="@android:color/black"
                android:text="đ"/>
            <me.imstudio.core.ui.widget.TextView
                android:id="@+id/txtPriceDetailOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:fontFamily="@font/source_sans_pro_semi_bold"
                android:textSize="@dimen/size_text_medium"
                android:textColor="@android:color/black"
                android:text="70.000"/>

            <me.imstudio.core.ui.widget.TextView
                android:id="@+id/text_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:fontFamily="@font/source_sans_pro_regular"
                android:text="/ phần"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/size_text_min" />
            <me.imstudio.core.ui.widget.TextView
                android:id="@+id/add_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/margin"
                android:fontFamily="@font/source_sans_pro_regular"
                android:textSize="@dimen/size_text_medium"
                android:textColor="@color/colorTextGreenLight"
                android:text="(Ghi chú)"
                android:textStyle="italic"/>
        </LinearLayout>
        <me.imstudio.core.ui.widget.TextView
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:fontFamily="@font/source_sans_pro_regular"
            android:textSize="@dimen/size_text_medium"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="italic"
            android:text="+ Nhiều hành phi"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="4"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/btn_decrease"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_minus_border"/>
            </LinearLayout>

            <me.imstudio.core.ui.widget.TextView
                android:id="@+id/quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:background="@drawable/box_background"
                android:fontFamily="@font/gilroy_regular"
                android:textSize="@dimen/size_text_extra_medium"
                android:textColor="@android:color/black"
                android:text="0"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"/>
            <LinearLayout
                android:id="@+id/btn_increase"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_plus_border"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_remove"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    app:srcCompat="@drawable/ic_remove"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>