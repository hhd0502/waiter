<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_medium"
        android:paddingTop="@dimen/margin"
        android:paddingBottom="@dimen/margin"
        android:orientation="horizontal"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/gilroy_semi_bold"
            android:textStyle="bold"
            android:textSize="@dimen/size_text_extra_large"
            android:textColor="@android:color/black"
            android:text="Hoá đơn tạm tính" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_edit_bill"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            app:srcCompat="@drawable/ic_close_orange"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/margin_medium"
        android:orientation="vertical"
        android:background="@color/colorPrimaryBackground">



        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/medium_round_corner_white_background"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_number_table"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/size_text_medium"
                        android:fontFamily="@font/gilroy_semi_bold"
                        android:text="Bàn 102A"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/size_text_large" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/dash_line_horizontal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingStart="@dimen/margin_medium"
                                android:paddingLeft="@dimen/margin_medium"
                                android:paddingRight="@dimen/margin_medium"
                                android:layout_marginBottom="@dimen/size_text_medium"
                                android:layout_marginTop="@dimen/size_text_medium">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/source_sans_pro_semi_bold"
                                    android:text="Giờ vào: "
                                    android:textColor="@color/colorTextPrimary"
                                    android:textSize="@dimen/size_text_extra_medium_small" />

                                <TextView
                                    android:id="@+id/text_time_start"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/source_sans_pro_regular"
                                    android:text="20:00"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textSize="@dimen/size_text_extra_medium_small" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/margin_medium"
                                android:paddingRight="@dimen/margin_medium"
                                android:paddingBottom="@dimen/margin">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/source_sans_pro_semi_bold"
                                    android:text="Giờ ra: "
                                    android:textColor="@color/colorTextPrimary"
                                    android:textSize="@dimen/size_text_extra_medium_small"  />

                                <TextView
                                    android:id="@+id/text_time_end"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/source_sans_pro_regular"
                                    android:text="22:30"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textSize="@dimen/size_text_extra_medium_small"  />
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/dash_line_vertical" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/margin_medium"
                                android:paddingRight="@dimen/margin_medium"
                                android:layout_marginBottom="@dimen/size_text_medium"
                                android:layout_marginTop="@dimen/size_text_medium">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/source_sans_pro_semi_bold"
                                    android:text="Ngày: "
                                    android:textColor="@color/colorTextPrimary"
                                    android:textSize="@dimen/size_text_extra_medium_small"  />

                                <TextView
                                    android:id="@+id/text_date"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/source_sans_pro_regular"
                                    android:text="15/05/2019"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textSize="@dimen/size_text_extra_medium_small"  />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/margin_medium"
                                android:paddingRight="@dimen/margin_medium"
                                android:paddingBottom="@dimen/margin">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/source_sans_pro_semi_bold"
                                    android:text="Thu ngân: "
                                    android:textColor="@color/colorTextPrimary"
                                    android:textSize="@dimen/size_text_extra_medium_small"  />

                                <TextView
                                    android:id="@+id/text_name_cashier"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/source_sans_pro_regular"
                                    android:text="Thu Hương"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textSize="@dimen/size_text_extra_medium_small"  />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_extra_medium"
                    android:padding="@dimen/margin"
                    android:background="@android:color/white">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:textSize="@dimen/size_text_medium"
                        android:textColor="@color/colorTextPrimary"
                        android:text="TT"
                        android:textAllCaps="true"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:textSize="@dimen/size_text_medium"
                        android:textColor="@color/colorTextPrimary"
                        android:text="Tên món"
                        android:textAllCaps="true"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:textSize="@dimen/size_text_medium"
                        android:textColor="@color/colorTextPrimary"
                        android:text="SL"
                        android:textAllCaps="true"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="end"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:textSize="@dimen/size_text_medium"
                        android:textColor="@color/colorTextPrimary"
                        android:text="Đ.Giá"
                        android:textAllCaps="true"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="end"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:textSize="@dimen/size_text_medium"
                        android:textColor="@color/colorTextPrimary"
                        android:text="T.Tiền"
                        android:textAllCaps="true"/>
                </LinearLayout>
                <include
                    android:id="@+id/view_foods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/layout_part_bill_food"/>

                <include
                    android:id="@+id/view_drinks"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    layout="@layout/layout_part_bill_drink"/>

            <LinearLayout
                android:id="@+id/view_total_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin"
                android:background="#f8f9fb">
                <TextView
                    android:id="@+id/text_title_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:textSize="@dimen/size_text_extra_medium_small"
                    android:textColor="@color/colorTextPrimary"
                    android:text="Tiền thanh toán"/>
                <TextView
                    android:id="@+id/text_total_price_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:textSize="@dimen/size_text_large"
                    android:textColor="@color/colorPrimary"
                    android:text="640.000 đ"/>
            </LinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/margin"
        android:paddingBottom="@dimen/margin"
        android:paddingStart="@dimen/margin_medium"
        android:paddingEnd="@dimen/margin_medium"
        android:background="@android:color/white"
        android:layout_gravity="bottom"
        android:weightSum="10">
       <LinearLayout
           android:layout_weight="5"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/gilroy"
               android:textSize="@dimen/size_text_semi_large"
               android:textColor="@color/colorTextColorSecondary"
               android:text="Tổng thanh toán"
               android:textStyle="normal"/>

           <TextView
               android:id="@+id/text_total_price_payment"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/gilroy"
               android:textSize="@dimen/size_text_semi_large"
               android:textColor="@color/colorPrimary"
               android:text="26.000.000"
               android:layout_marginTop="@dimen/margin_small"
               android:textStyle="bold"/>

       </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_gravity="center"
            android:background="@drawable/medium_round_corner_gradient_background">
            <TextView
                android:id="@+id/btn_confirm_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_text_medium"
                android:paddingBottom="@dimen/size_text_medium"
                android:fontFamily="@font/gilroy_bold"
                android:text="Xác nhận"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size_text_semi_large"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:id="@+id/btn_done_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_text_medium"
                android:paddingBottom="@dimen/size_text_medium"
                android:fontFamily="@font/gilroy"
                android:text="Xong"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size_text_semi_large"
                android:textStyle="bold"
                android:gravity="center"/>
            <com.tuyenmonkey.mkloader.MKLoader
                android:id="@+id/ic_loader"
                android:layout_width="@dimen/size_text_large"
                android:layout_height="@dimen/size_text_large"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="@dimen/size_text_medium"
                app:mk_type="FishSpinner"
                app:mk_color="@android:color/white"
                android:visibility="gone"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>