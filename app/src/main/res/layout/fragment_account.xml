<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.fragment.AccountFragment">


        <me.imstudio.core.ui.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_semi_bold"
            android:text="@string/label_account"
            android:textColor="@android:color/black"
            android:textSize="@dimen/size_text_extra_large"
            android:padding="@dimen/margin_medium"
            android:background="@android:color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_medium"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_avatar"
                android:layout_width="@dimen/size_icon_x8"
                android:layout_height="@dimen/size_icon_x8"
                app:srcCompat="@drawable/ic_avatar_holder" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/margin_medium">
                <me.imstudio.core.ui.widget.TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_semi_bold"
                    android:textSize="@dimen/size_text_large"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/default_label_user"/>
                <me.imstudio.core.ui.widget.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:fontFamily="@font/gilroy_regular"
                    android:textSize="@dimen/size_text_medium"
                    android:textColor="@color/colorTextBright"
                    android:text="@string/user_info"/>
            </LinearLayout>
        </LinearLayout>

        <me.imstudio.core.ui.widget.Button
            android:id="@+id/btn_log_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round_corner_orange_background"
            android:padding="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:fontFamily="@font/gilroy_semi_bold"
            android:textSize="@dimen/size_text_large"
            android:textColor="@color/white"
            android:text="@string/log_out"
            android:gravity="center"/>

</LinearLayout>